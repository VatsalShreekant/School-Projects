#include <stdlib.h>
#include <stdio.h>
#include "towers.h"
int main(int argc, char **argv)
{
    int n = 3;
    int from = 1;
    int dest = 2;
    int temp_x= atoi(argv[2]);
    int temp_y= atoi(argv[3]);

    if(argc==1)
    {
    }
    else if (argc==2) 
         {
         n = atoi(argv[1]);
         }
    else if ((argc>1) && (temp_x != temp_y) && (0<temp_x) && (temp_x<=3) && (0<temp_y) && (temp_y<=3))
         {
	n = atoi(argv[1]);
	from = temp_x;
	dest = temp_y;
         }
    else
    {
       fprintf(stderr, "Incorrect invocation /n");
     exit(1);
    }


}
    towers(n, from, dest);
    exit(0);
}

